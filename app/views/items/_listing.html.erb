
 <% @items.each do |item| %>

  <div class="col-sm-6 col-md-3">
    <div class="thumbnail">
     <a href="<%= url_for(controller: 'items', action: 'show item.id', only_path: true) %>"> <%= image_tag item.photo %></a>
      <div class="caption">
        <h3><%= item.nom %></h3>
        <p class="description"><%= item.description %></p>
        <span class="prix"><%= item.prix %> <i class="fa fa-eur"></i></span>
        
        <p class="tags"><%= item.couleur %> , <%= item.type.materiau %> , <%= item.piece.nom %></p>
      </div>
    </div>
  </div>
  <% end %>
