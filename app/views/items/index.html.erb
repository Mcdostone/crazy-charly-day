<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table class="list-item">
    <thead>
    <tr>
        <th>Nom</th>
        <th>Prix</th>
        <th>Photo</th>
        <th>Description</th>
        <th>Couleur</th>
        <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @items.each do |item| %>
    <div>
        <tr>
            <td><%= item.nom %></td>
            <td><%= item.prix %></td>
            <td><%= image_tag item.photo, :size => "100x100" %></td>
            <td><%= item.description %></td>
            <td><%= link_to 'Show', item %>
            </td>
            <td><i class="fa fa-trash fa-lg"></i> <%= link_to 'Edit', edit_item_path(item) %>
            </td>
            <td><i class="fa fa-edit fa-lg"></i> <%= link_to 'Destroy', item, method: :delete, data: { confirm:
                'Are you sure?' } %>

            </td>
        </tr>
    </div>
    <% end %>
    </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
