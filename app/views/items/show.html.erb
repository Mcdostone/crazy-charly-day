<p id="notice"><%= notice %></p>
<div class="row show_item" >
  <div class="col-md-8">
     <div class="row banner_img">
        <%= image_tag @item.photo , :class=>"img-responsive center-block " %>  
      </div>
      <input type="hidden" value="<%= @item.id %>" id="item_id" />
      <i class="fa-heart fa"></i> <span id="likes_count"><%= @item.likes %></span>
      <button class="btn btn-sm" id="like_item"><i class="fa fa-plus"></i> j'aime</button>          
  </div>
  <div class="col-md-4">
    <h2><%= @item.nom %></h2>
    <span class="label label-default"><%= @item.couleur %></span>
    <span class="label label-default"><%= @item.piece.nom %></span>
    <span class="label label-default"><%= @item.type.materiau %></span>
    <blockquote><%= @item.description %></blockquote>
    <span class="prix"><%= @item.prix %> <i class="fa fa-eur"></i></span>
  </div>
</div>

<div class="row">
<div class="col-md-12">
  <h2>  Comments</h2>
  
 <% @item.commentaires.each do |comm| %> 
 <blockquote>
 <p>
  <b><%= comm.contenu %></b> 
  </p>
  <footer>Comment from <cite title="Source Title"><%= comm.email %></cite></footer>
</blockquote> 
  <% end %>


<%= link_to 'Edit', edit_item_path(@item) %> |
<%= link_to 'Back', items_path %>

<%= render "commentaires/form" %>
</div>
</div>
